<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Invoice #<%= order.id %> - GlowAura Skincare</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    @media print {
      .no-print { display: none !important; }
      body { background: #ffffff !important; }
    }
    body {
      background: #f3ece4;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }
    .invoice-wrapper {
      max-width: 800px;
      margin: 2rem auto;
      background: #ffffff;
      padding: 2rem 2.25rem;
      border-radius: 18px;
      box-shadow: 0 24px 60px rgba(15, 23, 42, 0.16);
    }
    .invoice-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 1.5rem;
      border-bottom: 1px solid #e5e7eb;
      padding-bottom: 1rem;
      margin-bottom: 1.25rem;
    }
    .invoice-title {
      font-size: 1.7rem;
      font-weight: 600;
      letter-spacing: 0.04em;
      text-transform: uppercase;
    }
    .invoice-meta {
      font-size: 0.85rem;
      color: #6b7280;
      text-align: right;
    }
    .invoice-section-title {
      font-weight: 600;
      margin-top: 1.5rem;
      margin-bottom: 0.35rem;
      font-size: 0.95rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: #4b5563;
    }
    .invoice-items-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 0.75rem;
      font-size: 0.9rem;
    }
    .invoice-items-table th,
    .invoice-items-table td {
      border: 1px solid #e5e7eb;
      padding: 0.55rem 0.6rem;
    }
    .invoice-items-table th {
      background: #f9fafb;
      text-align: left;
      font-weight: 600;
      font-size: 0.82rem;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      color: #6b7280;
    }
    .invoice-total-row td {
      font-weight: 600;
      background: #fef3c7;
    }
    .invoice-summary {
      display: flex;
      justify-content: space-between;
      gap: 2rem;
      flex-wrap: wrap;
      font-size: 0.9rem;
    }
    .invoice-summary-col {
      min-width: 220px;
    }
    .invoice-actions {
      margin-top: 1.6rem;
      display: flex;
      justify-content: flex-end;
      gap: 0.75rem;
    }
  </style>
</head>
<body>
  <div class="invoice-wrapper">
    <div class="invoice-header">
      <div>
        <div class="invoice-title">Invoice</div>
        <div>GlowAura Skincare</div>
        <div class="small text-muted">www.glowaura.example</div>
      </div>
      <div class="invoice-meta">
        <div><strong>Invoice #<%= order.id %></strong></div>
        <div>Issued: <%= new Date(order.createdAt).toLocaleString() %></div>
        <% if (order.delivery && order.delivery.fullName) { %>
          <div style="margin-top:0.5rem;"><strong>Bill to:</strong><br>
            <%= order.delivery.fullName %><br>
            <%= order.delivery.street %><% if (order.delivery.unit) { %>, #<%= order.delivery.unit %><% } %><br>
            <%= order.delivery.postalCode %>
          </div>
        <% } %>
      </div>
    </div>

    <div class="invoice-summary">
      <div class="invoice-summary-col">
        <div class="invoice-section-title">Order</div>
        <div>Order ID: <%= order.id %></div>
        <div>Placed: <%= new Date(order.createdAt).toLocaleString() %></div>
      </div>
      <div class="invoice-summary-col">
        <div class="invoice-section-title">Payment & Shipping</div>
        <div>Payment method: <%= order.paymentMethod || 'card' %></div>
        <div>Delivery option: <%= order.deliveryOption || 'normal' %></div>
        <div>Status: <%= order.deliveryStatus || order.status || 'paid' %></div>
      </div>
    </div>

    <div>
      <div class="invoice-section-title">Items</div>
      <table class="invoice-items-table">
        <thead>
          <tr>
            <th style="width:45%;">Item</th>
            <th style="width:15%;">Qty</th>
            <th style="width:20%;">Unit price</th>
            <th style="width:20%;">Line total</th>
          </tr>
        </thead>
        <tbody>
          <% (order.items || []).forEach(function(item){ %>
            <tr>
              <td><%= item.productName %></td>
              <td><%= item.quantity %></td>
              <td>$<%= Number(item.price).toFixed(2) %></td>
              <td>$<%= (Number(item.price) * Number(item.quantity)).toFixed(2) %></td>
            </tr>
          <% }) %>
          <tr class="invoice-total-row">
            <td colspan="3" style="text-align:right;">Total</td>
            <td>$<%= Number(order.total || (order.subtotal + order.deliveryCost)).toFixed(2) %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="invoice-actions no-print">
      <button class="btn btn-outline-dark" onclick="window.location.href='/orders'">Back to orders</button>
      <button class="btn btn-dark" onclick="window.print()">Print invoice</button>
    </div>
  </div>
</body>
</html>
