<%- include('partials/header', { user: (typeof user !== 'undefined' ? user : null), title: 'Pay with QR' }) %>

<div class="container mt-4">
  <h2>PayNow QR</h2>
  <p>Order ID: <strong><%= order.id %></strong></p>
  <p>Total: <strong>$<%= Number(order.total || (order.subtotal + order.deliveryCost)).toFixed(2) %></strong></p>

  <div class="card mb-3" style="max-width:420px;">
    <div class="card-body text-center">
      <!-- Simple visual QR placeholder -->
      <div style="width:300px;height:300px;margin:0 auto;border:1px solid #ddd;display:flex;align-items:center;justify-content:center;">
        <div class="text-muted">[QR CODE]</div>
      </div>
      <p class="mt-3">Scan this QR with your bank app to pay.</p>
      <form method="post" action="/pay/qr/<%= order.id %>/confirm">
        <button class="btn btn-success">Simulate Payment (mark paid)</button>
        <a href="/cart" class="btn btn-secondary ms-2">Cancel</a>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
